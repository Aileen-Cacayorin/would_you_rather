<% if @choice == @question.choice_a %>
  $(".edit_choice>").hide()
  $("#edit_choice_a_<%=@question.id%>").show()
  $("#choice_a_description_<%=@question.id%>").html("<%= @question.choice_a.description %>")
<% end %>

